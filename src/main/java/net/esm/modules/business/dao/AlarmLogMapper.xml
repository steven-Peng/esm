<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.esm.dp.modules.business.dao.AlarmLogMapper">
	
	<select id="listForPage" resultType="net.esm.dp.modules.business.entity.AlarmLogEntity">
		SELECT
			`id`, 
			`terminal_number`, 
			`sensor_number`, 
			`value`, 
			`alarm_time`
		FROM
			alarm_log
		ORDER BY
			id DESC
	</select>
	
	<insert id="save">
		INSERT INTO alarm_log (
			`terminal_number`, 
			`sensor_number`, 
			`value`, 
			`alarm_time`
		)
		VALUES (
			#{terminalNumber}, 
			#{sensorNumber}, 
			#{value}, 
			#{alarmTime}
		)
	</insert>
	
	<select id="getObjectById" resultType="net.esm.dp.modules.business.entity.AlarmLogEntity">
		SELECT
			`id`, 
			`terminal_number`, 
			`sensor_number`, 
			`value`, 
			`alarm_time`
		FROM
			alarm_log
		WHERE
			id = #{id}
	</select>
	
	<update id="update">
		UPDATE alarm_log
	 	<set>
			<if test="terminalNumber != null">`terminal_number` = #{terminalNumber}, </if>
			<if test="sensorNumber != null">`sensor_number` = #{sensorNumber}, </if>
			<if test="value != null">`value` = #{value}, </if>
			<if test="alarmTime != null">`alarm_time` = #{alarmTime}</if>
		</set>
		WHERE
			id = #{id}
	</update>
	
	<delete id="batchRemove">
		DELETE
		FROM
			alarm_log
		WHERE
			id IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>